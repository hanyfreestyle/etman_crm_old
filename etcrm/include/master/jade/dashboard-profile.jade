extends layout/main-layout

block active-item
  - firstMenu['Dashboard']['active'] = 1
  - firstMenu['Dashboard']['S']['User Profile']['active'] = 1

//- Here we add a blocks that is rendered in the menu
block menu-profile
  // START user info
  .item.user-block
    // User picture
    .user-block-picture
      .user-block-status
        img.img-thumbnail.img-circle(src='app/img/user/02.jpg', alt="Avatar", width="60", height="60")
        .point.point-success.point-lg
      // Status when collapsed
    // Name and Role
    .user-block-info
      span.user-block-name.item-text Welcome User
      span.user-block-role UX-Dev
  // END user info

block content
  
  button(type='button').btn.btn-primary.pull-right
    em.fa.fa-plus-circle.fa-fw.mr-sm
    | Add Item
  h3 
    | Dashboard
    br
    small Welcome user

  .hidden-xs(data-toggle="notify", data-onload, data-message="<b>Welcome Visitor!</b> Dismiss this message with a click or wait for it to disappear." data-options='{"status":"danger", "pos":"top-right"}')


  .row

    // START dashboard main content
    section.col-md-9

      // START Secondary Widgets
      .row
        .col-md-4
          // START widget
          .panel.widget
            .panel-body
              .text-right.text-muted
                em.fa.fa-users.fa-2x
              h3.mt0 20 
              p.text-muted New followers added this month
              .progress.progress-striped.progress-xs
                .progress-bar.progress-bar-success.progress-80(role='progressbar', aria-valuenow='80', aria-valuemin='0', aria-valuemax='100')
                  span.sr-only 80% Complete
          // END widget
        .col-md-4
          // START widget
          .panel.widget
            .panel-body
              .text-right.text-muted
                em.fa.fa-bar-chart-o.fa-2x
              h3.mt0 $ 1250
              p.text-muted Average Monthly Income
              .progress.progress-striped.progress-xs
                .progress-bar.progress-bar-info.progress-40(role='progressbar', aria-valuenow='40', aria-valuemin='0', aria-valuemax='100')
                  span.sr-only 40% Complete
          // END widget
        .col-md-4
          // START widget
          .panel.widget
            .panel-body
              .text-right.text-muted
                em.fa.fa-trophy.fa-2x
              h3.mt0 $ 13865
              p.text-muted Yearly Income Goal
              .progress.progress-striped.progress-xs
                .progress-bar.progress-bar-warning.progress-60(role='progressbar', aria-valuenow='60', aria-valuemin='0', aria-valuemax='100')
                  span.sr-only 60% Complete
          // END widget

      // END Secondary Widgets

      // START chart
      .row
        .col-lg-12
          // START widget
          .panel.widget
            .panel-body.bg-primary
              .h5.mt0 Received all time
              // Line chart
              .inlinesparkline.sparkline(data-type='line', data-height='80', data-width='100%', data-line-width='2', data-line-color='#dddddd', data-spot-color='#bbbbbb', data-fill-color='', data-highlight-line-color='#fff', data-spot-radius='3', data-resize='true')
                // 1,3,4,7,5,9,4,4,7,5,9,6,4
              // Bar chart
              .text-center
                .inlinesparkline.inline(data-bar-color="#fff", data-height="50", data-bar-width="6", data-bar-spacing="6") 
                  | 1,3,4,7,5,9,4,4,7,5,9,6,4
            .panel-body.bg-inverse
              .row.row-table.text-center
                .col-xs-4
                  p.m0.h3 15080
                  p.m0.text-muted Shot Views
                .col-xs-4
                  p.m0.h3 12000
                  p.m0.text-muted Likes
                .col-xs-4
                  p.m0.h3 5100
                  p.m0.text-muted Comments
          // END widget
      // END chart

      // START messages and activity
      .row
        .col-md-6
          .panel.panel-default
            .panel-heading
              .pull-right.label.label-info 33
              .panel-title Unread Messages
            // START list group
            .list-group
              // START list group item
              a.list-group-item(href='#')
                .media
                  .pull-left
                    img.media-object.img-circle.thumb48(src="app/img/user/01.jpg", alt="Image")
                  .media-body.clearfix
                    small.pull-right 2h
                    strong.media-heading.text-primary 
                      span.point.point-success.point-lg.text-left
                      | Sheila Carter
                    p.mb-sm: small Cras sit amet nibh libero, in gravida nulla. Nulla...
              // END list group item
              // START list group item
              a.list-group-item(href='#')
                .media
                  .pull-left
                    img.media-object.img-circle.thumb48(src="app/img/user/04.jpg", alt="Image")
                  .media-body.clearfix
                    small.pull-right 3h
                    strong.media-heading.text-primary 
                      span.point.point-success.point-lg.text-left
                      | Rich Reynolds
                    p.mb-sm: small Cras sit amet nibh libero, in gravida nulla. Nulla...
              // END list group item
              // START list group item
              a.list-group-item(href='#')
                .media
                  .pull-left
                    img.media-object.img-circle.thumb48(src="app/img/user/03.jpg", alt="Image")
                  .media-body.clearfix
                    small.pull-right 4h
                    strong.media-heading.text-primary 
                      span.point.point-danger.point-lg.text-left
                      | Beverley Pierce
                    p.mb-sm: small Cras sit amet nibh libero, in gravida nulla. Nulla...
              // END list group item
              // START list group item
              a.list-group-item(href='#')
                .media
                  .pull-left
                    img.media-object.img-circle.thumb48(src="app/img/user/06.jpg", alt="Image")
                  .media-body.clearfix
                    small.pull-right 4h
                    strong.media-heading.text-primary 
                      span.point.point-danger.point-lg.text-left
                      | Alex Somar
                    p.mb-sm: small Vestibulum pretium aliquam scelerisque. 
              // END list group item
            // END list group
            // START panel footer
            .panel-footer.clearfix
              a(href='#').pull-left
                small Read All
              a(href='#').pull-right
                small Dismiss All
            // END panel-footer
        
        .col-md-6
          .panel.panel-default
            .panel-heading
              .panel-title Activity feed
            // START list group
            .list-group
              // START list group item
              .list-group-item
                .media
                  .pull-left
                    span.fa-stack.fa-lg
                      em.fa.fa-circle.fa-stack-2x.text-green
                      em.fa.fa-cloud-upload.fa-stack-1x.fa-inverse.text-white
                  .media-body.clearfix
                    .media-heading.text-green.m0 NEW UPLOAD
                    p.m0: small
                      | New file 
                      a(href="#") entities.xls 
                      | uploaded to the cloud
                    small 5 minutes ago
              // END list group item

              // START list group item
              .list-group-item
                .media
                  .pull-left
                    span.fa-stack.fa-lg
                      em.fa.fa-circle.fa-stack-2x.text-info
                      em.fa.fa-file-text-o.fa-stack-1x.fa-inverse.text-white
                  .media-body.clearfix
                    .media-heading.text-info.m0 NEW DOCUMENT
                    p.m0: small
                      | New document 
                      a(href="#") Lorem ipsum 
                      | created
                    small 1 hour ago
              // END list group item

              // START list group item
              .list-group-item
                .media
                  .pull-left
                    span.fa-stack.fa-lg
                      em.fa.fa-circle.fa-stack-2x.text-danger
                      em.fa.fa-exclamation.fa-stack-1x.fa-inverse.text-white
                  .media-body.clearfix
                    .media-heading.text-danger.m0 IMPORTANT MESSAGE
                    p.m0: small
                      | Sammy Sam sent you an important messsage. 
                      a(href="#") Read now
                    small 3 hours ago
              // END list group item

              // START list group item
              .list-group-item
                .media
                  .pull-left
                    span.fa-stack.fa-lg
                      em.fa.fa-circle.fa-stack-2x.text-warning
                      em.fa.fa-clock-o.fa-stack-1x.fa-inverse.text-white
                  .media-body.clearfix
                    .media-heading.text-warning.m0 MEETING
                    p.m0: small
                      | Rich Reynods added a new meeting. 
                      a(href="#").label.label-info JOIN
                    small yesterday
              // END list group item

            // END list group
            // START panel footer
            .panel-footer.clearfix
              a(href='#').pull-left
                small Load more
            // END panel-footer
      // END messages and activity
        

